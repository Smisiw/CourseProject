@page
@model CourseProject.Pages.Login.IndexModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center" id="h2Enter">Вход в аккаунт</h2>
            <form method="post" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <span asp-validation-for="model.Login" class="text-danger"></span>
                    <label asp-for="model.Login">Логин</label>
                    <input type="text" id="" asp-for="model.Login" class="form-control" required />
                </div>
                <div class="form-group">
                    <span asp-validation-for="model.Password" class="text-danger"></span>
                    <label asp-for="model.Password">Пароль</label>
                    <input type="password" id="Password" asp-for="model.Password" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary btn-block ">Войти</button>
                <a class="text-center mt-2" asp-page="/Registration/Index" id="switch-to-register">Зарегистрироваться</a>
            </form>
        </div>
    </div>
</div>